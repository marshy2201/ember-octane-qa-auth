{{!-- Add Question --}}
<h4>Add a Question</h4>
<BsForm @model={{this}} @onSubmit={{this.addQuestion}} class="mb-4 mt-3" as |form|>
  <form.element  
    @placeholder="question..." 
    @property="question" 
    @required={{true}}
    as |el|
  >
    <div class="input-group">
      <el.control />
      <div class="input-group-append">
        <button class="btn btn-secondary" type="submit">Add</button>
      </div>
    </div>
  </form.element>
</BsForm>

{{!-- Questions --}}
<h4>Questions</h4>
<div class="list-group mt-3">
  {{#each this.questions as |question|}}
    <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
      {{!-- Link to question route --}}
      <LinkTo @route="authenticated.question" @model={{question.id}} class="d-flex justify-content-between align-items-center list-group-item-action">
        {{question.text}}
        <span class="badge badge-secondary badge-pill mr-3">Answers {{question.answers.length}}</span>
      </LinkTo>

      {{!-- Delete question --}}
      <a role="button" {{on "click" (fn this.removeQuestion question)}}><FaIcon @icon="times" class="text-danger" /></a>
    </li>
  {{/each}}
</div>
